<%= render 'components/collapsible', heading: 'Thông Tin Đăng Nhập Giáo Lý Viên' do %>
  <h4>Số Lượng : <%= @guidances.count %></h4>
  <table>
    <thead>
    <tr>
      <th style='width:  30px'>STT</th>
      <th style='width:  80px'>Lớp</th>
      <th style='width:  90px'>Phụ Trách</th>
      <th style='width: 280px'>Tên Thánh - Họ và Tên</th>
      <th style='width:  80px'>Ngày Sinh</th>
      <th style='width:  90px'>Điện Thoại</th>
      <th style='width:  90px'>Username</th>
    </tr>
    </thead>

    <tbody>
    <% @guidances.each_with_index do |guidance, index| %>
      <% classroom = guidance.classroom %>
      <% teacher = guidance.teacher %>

      <tr class="table-row">
        <td style='width:  30px'><%= index+1 %></td>
        <td style='width:  80px'><%= classroom ? (link_to classroom.name, classroom) : '' %></td>
        <td style='width:  80px'><%= guidance.position %></td>
        <td style='width: 280px'><%= link_to teacher.name, teacher %></td>
        <td style='width: 100px'><%= teacher.date_birth&.strftime("%d-%m-%Y") %></td>
        <td style='width:  90px'><%= teacher.phone %></td>
        <td style='width:  90px'><%= teacher.user&.username %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>